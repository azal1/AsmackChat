<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.googlecode.asmack.chat"
      android:versionCode="1"
      android:versionName="1.0">

    <application android:icon="@drawable/icon" android:label="@string/app_name">

        <activity android:name=".Chat" android:theme="@android:style/Theme.Light.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="com.android.im.category.JABBER" />
                <data android:scheme="im" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.SENDTO" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:scheme="imto" android:host="jabber"/>
            </intent-filter>
        </activity>

        <receiver android:name="StanzaReceiver">
          <intent-filter>
            <action android:name="com.googlecode.asmack.intent.XMPP.STANZA" />
          </intent-filter>
        </receiver>

    </application>

    <uses-permission android:name="com.googlecode.asmack.android.RECEIVE_STANZAS" />

    <uses-sdk android:minSdkVersion="8" />

</manifest>